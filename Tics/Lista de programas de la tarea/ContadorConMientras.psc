Proceso ContadorConMientras
	Definir valorLimite Como Entero ;
	Definir contador Como Entero;
	Escribir "Programa que usa ciclo Mientras";
	Escribir "Ingrese un valor entre 10 y 20:";
	Leer valorLimite;
	//area de proceso de datos
	Mientras contador<=valorLimite
		Escribir contador
		contador<-contador+1
	FinMientras
	
	
FinProceso
